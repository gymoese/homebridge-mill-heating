{
  "pluginAlias": "MillHeating",
  "pluginType": "platform",
  "platform": "MillHeatingPlatform",
  "name": "Mill Heating",  
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "accessories": {
        "type": "array",
        "title": "Heaters",
        "items": {
          "type": "object",
          "required": ["name", "host"],
          "properties": {
            "name": {
              "type": "string",
              "title": "Name",
              "description": "Accessory name shown in Home app."
            },
            "host": {
              "type": "string",
              "title": "Host",
              "description": "IP address or hostname of the heater (hostname must be resolvable by the Homebridge host)."
            },
            "protocol": {
              "type": "string",
              "title": "Protocol",
              "enum": ["http", "https", "auto"],
              "default": "http",
              "description": "Recommended default is http (no API key). Auto = https if apiKey is set, otherwise http."
            },
            "apiKey": {
              "type": "string",
              "title": "API Key",
              "default": "",
              "description": "Optional. Adds Authentication header. WARNING: Some Gen 4 firmwares may disable local REST after setting API key."
            },
            "allowInsecureHttps": {
              "type": "boolean",
              "title": "Allow insecure HTTPS",
              "default": true,
              "description": "If using https, allow self-signed certificates."
            },
            "pollIntervalSeconds": {
              "type": "integer",
              "title": "Poll interval (seconds)",
              "default": 10,
              "minimum": 2,
              "maximum": 300
            },
            "minTemperature": {
              "type": "number",
              "title": "Min temperature",
              "default": 5
            },
            "maxTemperature": {
              "type": "number",
              "title": "Max temperature",
              "default": 30
            },
            "temperatureStep": {
              "type": "number",
              "title": "Temperature step",
              "default": 0.5
            },
            "temperatureUnit": {
              "type": "string",
              "title": "Temperature unit",
              "enum": ["C", "F"],
              "default": "C"
            },
            "manufacturer": {
              "type": "string",
              "title": "Manufacturer",
              "default": "Mill"
            },
            "model": {
              "type": "string",
              "title": "Model",
              "default": "Gen 3/4 Heater"
            },
            "firmwareRevision": {
              "type": "string",
              "title": "Firmware revision",
              "default": ""
            },
            "serialNumber": {
              "type": "string",
              "title": "Serial number",
              "default": ""
            }
          }
        }
      }
    }
  }
}
